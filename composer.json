{
    "name": "beekalam/ir-airports",
    "description": "A package for Iran Airport Data",
    "keywords": [
        "beekalam",
        "ir-airports"
    ],
    "homepage": "https://github.com/beekalam/ir-airports",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mohammadreza Mansouri",
            "email": "beekalam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "Beekalam\\IRAirports\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Beekalam\\IRAirports\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
